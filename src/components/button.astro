---
export type Props = { href: string; id?: string };
const { href, id } = Astro.props;
---

<a
  href={href}
  id={id}
  class="dark:bg-zinc-900/50 dark:hover:bg-zinc-900 bg-zinc-100 hover:bg-zinc-200 rounded-md border border-zinc-300 dark:border-zinc-800 dark:hover:border-zinc-700 hover:border-zinc-400 group overflow-hidden transition py-2 px-3 flex max-w-min gap-2 items-center"
>
  <slot />
</a>
