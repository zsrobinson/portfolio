---
import { IconSearch, IconSun } from "@tabler/icons-react";
import NavbarLink from "./navbar-link.astro";
import ThemeIcon from "./theme-icon";
---

<div
  class="bg-zinc-200 dark:bg-zinc-900 border-b border-zinc-300 dark:border-zinc-800"
>
  <div
    class="max-w-4xl mx-auto flex justify-between p-4 items-center flex-wrap gap-2"
  >
    <a href="/">
      <h1 class="font-handwriting text-2xl leading-none">Zachary Robinson</h1>
    </a>
    <nav class="flex gap-2">
      <NavbarLink href="/">Home</NavbarLink>
      <NavbarLink href="/about">About</NavbarLink>
      <NavbarLink href="/blog">Blog</NavbarLink>
      <NavbarLink href="/gallery">Gallery</NavbarLink>
    </nav>
    <div class="flex gap-2">
      <a href="/search" class="w-6 h-6">
        <IconSearch />
      </a>
      <div class="w-6 h-6">
        <ThemeIcon client:only="react" />

        <noscript title="Please Enable Javascript to Switch Themes">
          <IconSun />
        </noscript>
      </div>
    </div>
  </div>
</div>
