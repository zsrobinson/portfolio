---
import type { CollectionEntry } from "astro:content";
import { formatDate } from "../utils";
import { LinkCard } from "./link-card";

type Props = { post: CollectionEntry<"posts"> };
const { post } = Astro.props;
const { remarkPluginFrontmatter } = await post.render();
---

<LinkCard href={`/posts/${post.slug}`}>
  <p class="text-2xl leading-[1.15]" style="text-wrap: balance;">
    {post.data.title}
  </p>

  <p class="pb-2 text-sm text-zinc-600 dark:text-zinc-400">
    {formatDate(post.data.date)} Â· {
      remarkPluginFrontmatter.minutesRead.split(" ")[0]
    } min read
  </p>

  <p class="line-clamp-3 text-zinc-600 dark:text-zinc-400">
    {post.body.split(" ").slice(0, 80).join(" ")}
  </p>
</LinkCard>
