---
import "~/styles/globals.css";
import Footer from "~/components/footer.astro";
import Navbar from "~/components/navbar.astro";

export type Props = {
  title: string;
  description?: string;
  keywords?: string[];
  parent?: string;
  noIndex?: boolean;
};

const { title, description, keywords, parent, noIndex = false } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="alternate" type="application/rss+xml" href="/index.xml" />
    <link rel="sitemap" href="/sitemap-index.xml" />

    <!-- meta tags and whatnot -->
    <title>{title}</title>
    <meta name="description" content={description} />
    <meta name="keywords" content={keywords?.join(", ")} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta name="generator" content={Astro.generator} />
    {noIndex && <meta name="robots" content="noindex" />}

    <!-- light/dark mode script -->
    <script is:inline>
      const media = window.matchMedia("(prefers-color-scheme: dark)");

      // set theme before react loads to avoid flash of incorrect theme
      const theme = localStorage.getItem("theme");

      if (theme === "dark" || (!theme && media.matches)) {
        document.documentElement.classList.add("dark");
      }

      // update class when user changes system theme
      media.addEventListener("change", (e) => {
        // if user has already set a theme, don't change it
        if (localStorage.getItem("theme") !== null) return;

        if (e.matches) {
          document.documentElement.classList.add("dark");
        } else {
          document.documentElement.classList.remove("dark");
        }
      });
    </script>
  </head>

  <body>
    <Navbar parent={parent} />

    <!-- Gradient at top of page -->
    <div
      class="absolute left-0 top-0 -z-10 h-96 w-full from-secondary/30 to-transparent dark:bg-gradient-to-b"
    >
    </div>

    <main class="mx-auto min-h-screen max-w-5xl p-4 py-8">
      <slot />
    </main>

    <Footer />
  </body>
</html>
